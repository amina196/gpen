



<div class="row">
  <div class="span12">
    <div class="well">
      <h1>Listing users</h1>
      <hr>
      <table class="table table-striped">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.fname %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Delete', user, confirm: 'Are you sure?', method: :delete %></td>
        </tr>
      <% end %>
      </table>

      <br />

      <%= link_to 'New User', signup_path %>
    </div><!--/well-->
  </div><!--/span12-->
</div><!--/row-->