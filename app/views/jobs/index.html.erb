


<ul class="breadcrumb">
        <li>
          <a href="#">Home</a> <span class="divider">/</span>
        </li>
        <li class="active">Jobs</li>
      </ul>

<div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            
            <ul class="nav nav-list" id="search_filters">
              <h3>Filters</h3>
              <li class="nav-header">By County</li>
              <li><a href="#">Bucks</a></li>
              <li><a href="#">Chester</a></li>
              <li><a href="#">Delaware</a></li>
              <li><a href="#">Montgomery</a></li>
              <li><a href="#">Philadelphia</a></li>
              <li><a href="#">Harrisburg</a></li>
              <li class="nav-header">By Type</li>
              <li><a href="#">Transportation</a></li>
              <li><a href="#">Energy</a></li>
              <li><a href="#">Housing</a></li>
              <li><a href="#">Food</a></li>
              <li><a href="#">Healthcare</a></li>
              <li><a href="#">Waste Management</a></li>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9">
          <div class="hero-unit">
            <h1>Green Jobs</h1>
            <p>We are proud to say that we have <%= @jobs.count %> (and counting!) green organizations listed on our website. Use the filters to the left or the search bar below to find organizations.</p>
            
            <!--
            <form class="form-search form-big-search">
              <input type="text" class="big-search-query">
              <button type="submit" class="btn btn-primary btn-big-search pull-right">Search</button>
            </form>
            -->

            <%= form_tag jobs_path, method: 'get', class: 'form-search form-big-search' do%>
              <p>
                  <%= text_field_tag :search, params[:search], class: 'big-search-query' %>
                  <%= submit_tag "Search", class: 'btn btn-primary btn-big-search pull-right', name: 'nil'%>
              </p>
            <% end %>

            


            <% if signed_in? && current_user.organizations.any? %><%= link_to 'Post New Job', new_job_path %> <% end %>
            
          </div>

            <div class="row-fluid">
            <h6>Latest Jobs</h6>
          </div>

         <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Organization</th>
                <th>Status</th>
                <th>Availability</th>
                <th>Link</th>
              </tr>
            </thead>
            <tbody>


              <% @jobs.reverse.each do |job| %>
                <tr>
                  <td>
                    <b><%= link_to(job.title, job, :class => "org-popover", :rel => "popover", "data-original-title" => job.title, "data-content" => job.description) %></b>
                  </td>
                  <td>       
                    <%= job.organization.name %>
                  </td>
                  <td>
                    <%= job.status %>
                  </td>
                  <td>
                    <%= job.availability %>
                  </td>
                  
                  <td>
                    <%= link_to 'View', job, class: "btn btn-small btn-success" %>
                    
                  </td>
                </tr>
              <% end %>
              
            </tbody>
          </table>

          <div class="pagination">
            <ul>
              <li><a href="#">Prev</a></li>
              <li class="active">
                <a href="#">1</a>
              </li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li><a href="#">6</a></li>
              <li><a href="#">7</a></li>
              <li><a href="#">8</a></li>
              <li><a href="#">Next</a></li>
            </ul>
          </div>



        </div><!--/span-->
      </div><!--/row-->